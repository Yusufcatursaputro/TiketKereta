<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".KonfirmActivity">

    <TextView
        android:id="@+id/ticketTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berhasil Mendapatkan Tiket!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <ImageView
        android:id="@+id/ticketIcon"
        android:layout_width="213dp"
        android:layout_height="220dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Success Icon"
        android:src="@drawable/ic_ticket_success" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama: "
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/jamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam: "
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tanggalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal: "
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tujuanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tujuan: "
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

</LinearLayout>